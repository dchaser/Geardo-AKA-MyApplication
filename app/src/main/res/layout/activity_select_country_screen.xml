<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="au.com.geardoaustralia.FullProductScreen.subscreens.ShippingOptinsScreen">

    <RelativeLayout
        android:id="@+id/rlClickToSelectShippingOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/fivedp"
        android:layout_marginLeft="@dimen/fivedp"
        android:layout_marginRight="@dimen/fivedp"
        android:layout_marginStart="@dimen/fivedp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:text="Shipping Country"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:theme="@style/RobotoTextViewStyle" />


        <ImageView
            android:id="@+id/ivGoBack"
            android:layout_width="@dimen/fortydp"
            android:layout_height="@dimen/fortydp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_chevron_left_18pt_3x" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.6"
        android:background="@drawable/border_b" />

   <android.support.v7.widget.RecyclerView
       android:id="@+id/rvCountryList"
       android:layout_width="match_parent"
       android:layout_height="match_parent"/>


</LinearLayout>



