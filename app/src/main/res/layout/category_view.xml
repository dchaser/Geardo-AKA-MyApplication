<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <TextView
        android:id="@+id/tvCategoryTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/category_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:background="@drawable/activatedbackgroundindicator"
        android:alpha="0.7"
        android:drawableEnd="@drawable/ic_chevron_right_black_18dp"
        android:drawableRight="@drawable/ic_chevron_right_black_18dp"
        android:gravity="center_vertical|center_horizontal"
        android:padding="2dp"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_below="@+id/tvCategoryTitle"
        android:layout_height="@dimen/dp2_deimension"/>


</RelativeLayout>
