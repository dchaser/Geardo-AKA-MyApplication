<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:focusable="false"

    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivCatImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/health_beauty" />

    <TextView
        android:id="@+id/tvCategoryTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/category_height"
        android:alpha="0.7"
        android:drawableEnd="@drawable/ic_chevron_right_black_18dp"
        android:drawableRight="@drawable/ic_chevron_right_black_18dp"
        android:gravity="center_vertical|center_horizontal"
        android:padding="2dp"
        android:textSize="20sp" />




</LinearLayout>
