<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:layout_margin="5dp"
    android:clickable="true"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/ivProductImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sort_layout_image_height"
            android:scaleType="centerInside"
            android:src="@drawable/dualcarcharger" />

        <TextView
            android:id="@+id/tvPPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingEnd="0dp"
            android:paddingLeft="40dp"
            android:paddingRight="0dp"
            android:paddingStart="40dp"
            android:text="AUS $31.52 - 34.90"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:theme="@style/RobotoBold" />

        <TextView
            android:id="@+id/tvFShipping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingEnd="0dp"
            android:paddingLeft="40dp"
            android:paddingRight="0dp"
            android:paddingStart="40dp"
            android:paddingTop="5dp"
            android:text="free shipping"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:theme="@style/RobotoTextViewStyle" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMinOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="start"
                android:paddingEnd="0dp"
                android:paddingLeft="40dp"
                android:paddingRight="0dp"
                android:paddingStart="40dp"
                android:paddingTop="5dp"
                android:text="Min Order 10 sets"
                android:theme="@style/RobotoTextViewStyle" />

            <ToggleButton
                android:id="@+id/tbFavorite"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/check"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:textOff=""
                android:textOn="" />

        </RelativeLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>
